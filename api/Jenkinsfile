pipeline {
    agent {
        docker {
            image 'ruby'
            args '--network rocklov-network'
        }
    }

    stages {
        stage('Preparation') {
            steps {
                sh 'cd api && bundler install'
            }
        }
        stage('Testing') {
            steps {
                sh 'cd api && rspec'
            }
        }
    }
}
